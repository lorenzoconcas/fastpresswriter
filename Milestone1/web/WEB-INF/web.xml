<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Notizie</servlet-name>
        <servlet-class>fpw.unica.m2.Index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>fpw.unica.m2.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsDetails</servlet-name>
        <servlet-class>fpw.unica.m2.NewsDetails</servlet-class>
        <init-param>
            <param-name>id</param-name>
            <param-value>0
</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Notizie</servlet-name>
        <url-pattern>/Notizie</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Notizie</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Profilo</servlet-name>
        <servlet-class>fpw.unica.m2.Profilo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProfile</servlet-name>
        <servlet-class>fpw.unica.m2.ViewProfile</servlet-class>
        <init-param>
            <param-name>id</param-name>
            <param-value>-1</param-value>
        </init-param>
        <init-param>
            <param-name>author</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>fpw.unica.m2.Search</servlet-class>
        <init-param>
            <param-name>query</param-name>
            <param-value/>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PersonalArticles</servlet-name>
        <servlet-class>fpw.unica.m2.PersonalArticles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsDetails</servlet-name>
        <url-pattern>/NewsDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profilo</servlet-name>
        <url-pattern>/Profilo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProfile</servlet-name>
        <url-pattern>/ViewProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonalArticles</servlet-name>
        <url-pattern>/PersonalArticles</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
